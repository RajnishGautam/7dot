RewriteEngine On
RewriteBase /

# Remove trailing slashes and redirect
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Handle SPA routing - serve index.html for non-file requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /index.html [L]

# Optional: Handle specific extensions
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^.*$ /index.html [L]